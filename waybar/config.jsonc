[
    {
        "layer": "top",
        "output": "DP-1",
        "modules-left": [
            "hyprland/workspaces"
        ],
        "modules-center": [
            "hyprland/window"
        ],
        "modules-right": [
            "pulseaudio",
            "custom/hyprsunset",
            "clock",
            "custom/power"
        ],
        "hyprland/window": {
            "format": "{}",
            "max-length": 50,
            "separate-outputs": true
        },
        "clock": {
            "format-alt": "üïí {:%a %b. %d  %H:%M:%S}"
        },
        "hyprland/workspaces": {
            "format": "{name}: {icon}",
            "on-click": "activate",
            "format-icons": {
                "1": "ÔÑ†",
                "2": "Ôâ®",
                "3": "ÔÑ°",
                "4": "ÔÜº",
                "5": "üì¶",
                "urgent": "ÔÅ™",
                "focused": "ÔÜí",
                "default": "ÔÑë"
            },
            "sort-by-number": true
        },
        "custom/power": {
            "format": "‚èª ",
            "tooltip": false,
            "menu": "on-click",
            "menu-file": "$HOME/.config/waybar/power_menu.xml",
            "menu-actions": {
                "shutdown": "shutdown",
                "reboot": "reboot",
                "suspend": "systemctl suspend",
                "hibernate": "systemctl hibernate"
            }
        },
        "custom/hyprsunset": {
            "format": "üîÜ",
            "on-click": "pgrep -x hyprsunset && kill $(pgrep -x hyprsunset) || hyprsunset -t 5000 &"
